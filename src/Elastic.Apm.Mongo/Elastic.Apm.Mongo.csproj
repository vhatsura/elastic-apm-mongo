<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net461;netstandard2.0</TargetFrameworks>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <Authors>Vadim Hatsura</Authors>
    <PackageId>ElasticApm.MongoDB</PackageId>
    <Description>Elastic APM for MongoDB. This package contains auto instrumentation for MongoDb.</Description>
    <PackageTags>apm, monitoring, elastic, elasticapm, analytics, mongo, mongodb</PackageTags>
    <Copyright>Copyright (c) 2019 - Present</Copyright>
    <PackageProjectUrl>https://github.com/vhatsura/elastic-apm-mongo</PackageProjectUrl>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/vhatsura/elastic-apm-mongo.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <Company />
    <Product />
    <LangVersion>8</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Elastic.Apm" Version="1.3.0" />
    <PackageReference Include="GitVersionTask" Version="5.2.4" PrivateAssets="All" />
    <PackageReference Condition=" '$(TargetFramework)' == 'net461' " Include="Microsoft.NETFramework.ReferenceAssemblies" Version="1.0.0" PrivateAssets="All" />
    <PackageReference Include="MongoDB.Driver.Core" Version="2.10.3" />
  </ItemGroup>

</Project>
